{
  "service": {
    "name": "mesos-follower",
    "tags": ["{{ mesos_cluster }}"],
    "port": {{ mesos_follower_port }},
    "check": {
      "script": "curl --silent --show-error  --fail --dump-header /dev/stderr --retry 2 http://127.0.0.1:{{ mesos_follower_port }}/slave\"(1)\"/health",
      "interval": "10s"
    }
  }
}
