server {
  proxy_connect_timeout       600;
  proxy_send_timeout          600;
  proxy_read_timeout          600;
  send_timeout                600;

  listen {{ ansible_default_ipv4.address}}:8500;

  if ($request_method !~ ^GET$) {
     return 404;
  }

  location / {
    proxy_pass http://localhost:8500/;
  }
}
